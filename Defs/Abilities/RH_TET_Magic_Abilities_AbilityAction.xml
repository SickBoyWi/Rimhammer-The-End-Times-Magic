			<SecondsToRecharge>45.0</SecondsToRecharge>
			<range>36</range>
			<burstShotCount>1</burstShotCount>
			<soundCast>RH_TET_CrackingSoundLoud</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
