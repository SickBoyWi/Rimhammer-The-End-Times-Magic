	<ThingDef ParentName="BuildingBase" Name="RH_TET_Magic_FinalTransmutationSculpture">
		<defName>RH_TET_Magic_FinalTransmutationSculpture</defName>
		<label>transmuted pawn</label>
		<description>This was once a living breathing being, but now it is a golden statue. It was created via the Final Transmutation spell.</description>
		<thingClass>Building_Art</thingClass>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<useHitPoints>true</useHitPoints>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsArt</li>
		</thingCategories>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtSculpture</nameMaker>
				<descriptionMaker>ArtDescription_Sculpture</descriptionMaker>
				<canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
			</li>
		</comps>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
		<tradeTags>
			<li>Art</li>
		</tradeTags>
		<castEdgeShadows>true</castEdgeShadows>
		<graphicData>
			<graphicClass>Graphic_Random</graphicClass>
			<texPath>Things/Building/Art/TransmutedPawn</texPath>
			<drawSize>(2.5,2.5)</drawSize>
		</graphicData>
		<fillPercent>0.5</fillPercent>
		<rotatable>false</rotatable>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Mass>7</Mass>
			<Beauty>100</Beauty>
			<Flammability>1.0</Flammability>
			<SellPriceFactor>1.10</SellPriceFactor>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>100</costStuffCount>
		<tradeability>Sellable</tradeability>
	</ThingDef>

